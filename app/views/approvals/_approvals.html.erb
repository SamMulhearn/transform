<div class="row">
	<% @approvals.each do | a | %>
		<div class="approval-container span12">
			<div class="approval-role span9">
				<%= "On behalf of #{a.role.name}:"%>
			</div>
			<div class= "approval-buttons span2">
					<%= simple_form_for (a), :class => "form-search" do |f| %>
						<%= f.input :approved, :as => :hidden , :input_html => { :value => "true" } %>
						<%= f.input :closed, :as => :hidden , :input_html => { :value => "true" } %>
						<%= f.submit 'Approve', :class => "btn btn-success span2" %>
					<% end %>
					<%= simple_form_for (a), :class => "form-search" do |f| %>
						<%= f.input :approved, :as => :hidden , :input_html => { :value => "false" } %>
						<%= f.input :closed, :as => :hidden , :input_html => { :value => "true" } %>
						<%= f.submit 'Reject', :class => "btn btn-danger span2" %>
					<% end %>
			</div>
		</div>
	<% end %>
</div>
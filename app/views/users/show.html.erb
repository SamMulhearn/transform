<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>

<%= f.error_notification %>
<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.association :roles, as: :check_boxes, :collection => Role.where(:approvalgroup => true), :prompt => "Select Approval Groups", label: 'Approval groups', :label_method => :description %>

<%= f.button :submit, :class => 'btn-primary' %>

<% end %>

<% provide(:title, "Edit user") %> 
<h1><%= @user.fullname %></h1>
<dt>Name</dt>
	<dd><%= @user.fullname %></dd>
<dt>Email</dt>
	<dd><%= mail_to(@user.email, @user.email) %></dd>
<dt>Approval Groups</dt>
	<% @user.roles.each do | r | %>
	<dd>
		<%if r.approvalgroup %>
			<%= r.description %>
		<% end %>
		</dd>
	<% end %>




<%= debug @user if Rails.env.development?%>